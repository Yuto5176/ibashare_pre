<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/seeTownButton"
        android:layout_width="300px"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:onClick="onButtonTapped"
        android:text="@string/他の町を見る"
        android:textSize="16px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewMain"
                android:layout_width="342dp"
                android:layout_height="209dp"
                android:src="@drawable/fun_entaku" />

            <TextView
                android:id="@+id/textViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="155dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="24dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ジャンル"
        android:textSize="34sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/place01" />

                <TextView
                    android:id="@+id/place1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="居場所1"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/place02" />

                <TextView
                    android:id="@+id/place2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="居場所2"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/place03" />

                <TextView
                    android:id="@+id/place3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="居場所3"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/place04" />

                <TextView
                    android:id="@+id/place4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="居場所4"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/seeMoreButton"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/roboto"
            android:onClick="onButtonTapped"
            android:text="@string/もっとみる"
            android:textSize="16dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
